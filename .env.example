# When adding additional environment variables, the schema in "/src/env.ts"
# should be updated accordingly.
REACT_EDITOR="code" # When you click a link in a Next.js app error route, it will open here

# Core Auth
AUTH_URL="http://localhost:3000"            # Base URL for authentication
AUTH_SECRET="generate_a_secure_secret_here" # Run: `openssl rand -base64 32` in your terminal to generate a secure secret

# OAuth Providers
# GitHub: https://github.com/settings/developers
AUTH_GITHUB_ID=""     # GitHub OAuth App Client ID
AUTH_GITHUB_SECRET="" # GitHub OAuth App Client Secret

# Discord: https://discord.com/developers/applications
AUTH_DISCORD_ID=""     # Discord OAuth App Client ID
AUTH_DISCORD_SECRET="" # Discord OAuth App Client Secret

# Google: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=""     # Google OAuth App Client ID
AUTH_GOOGLE_SECRET="" # Google OAuth App Client Secret

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/shipkit"

# Email (Resend: https://resend.com)
AUTH_RESEND_KEY="re_123456789" # Get from Resend dashboard

# Payments (LemonSqueezy: https://app.lemonsqueezy.com/settings/api)
LEMONSQUEEZY_API_KEY=""        # API key for LemonSqueezy
LEMONSQUEEZY_STORE_ID=""       # Your store ID
LEMONSQUEEZY_WEBHOOK_SECRET="" # Webhook secret for verifying requests

# CMS (Payload)
PAYLOAD_SECRET=your-payload-secret
PAYLOAD_CONFIG_PATH=src/payload/payload.config.ts

# Node Environment
NODE_ENV="development" # development, test, or production

# AWS S3 Configuration
# Required for file uploads and storage
AWS_REGION=us-east-1                  # Your AWS region (e.g., us-east-1, eu-west-1)
AWS_ACCESS_KEY_ID=your-access-key-id  # Your AWS IAM user access key
AWS_SECRET_ACCESS_KEY=your-secret-key # Your AWS IAM user secret key
AWS_BUCKET_NAME=your-bucket-name      # Your S3 bucket name

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here

# Email (Resend)
RESEND_API_KEY=your-resend-api-key

# CMS
PAYLOAD_SECRET=your-payload-secret
PAYLOAD_CONFIG_PATH=src/payload/payload.config.ts

# Builder.io
BUILDER_PUBLIC_KEY=your-builder-key

# Analytics
POSTHOG_KEY=your-posthog-key
POSTHOG_HOST=your-posthog-host

# Optional: Development Tools
# ANALYZE=true # Enable bundle analyzer
# DEBUG=true # Enable debug mode
